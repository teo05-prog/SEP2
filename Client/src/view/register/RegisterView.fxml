<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="600.0" spacing="15.0" style="-fx-background-color: #cee0dc; -fx-padding: 40;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.admin.main.MainAdminViewController">

    <children>
        <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 24px; -fx-font-weight: bold;" text="Train Information" />

        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="480.0" spacing="10.0">
            <children>
                <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;" text="Modify information for train:" />
                <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" text="[train ID]" />
            </children>
        </HBox>

        <TableView prefHeight="300.0" prefWidth="480.0" style="-fx-background-color: white; -fx-background-radius: 10;">
            <columns>
                <TableColumn prefWidth="75.0" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-background-color: #f0f5f4;" text="From" />
                <TableColumn prefWidth="75.0" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-background-color: #f0f5f4;" text="To" />
                <TableColumn prefWidth="75.0" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-background-color: #f0f5f4;" text="Arrival" />
                <TableColumn prefWidth="75.0" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-background-color: #f0f5f4;" text="Departure" />
                <TableColumn prefWidth="75.0" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-background-color: #f0f5f4;" text="Seats" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <style>
                -fx-font-family: System;
                -fx-border-color: #40798c;
                -fx-border-width: 1px;
                -fx-border-radius: 10;
            </style>
        </TableView>

        <ButtonBar prefHeight="40.0" prefWidth="480.0" style="-fx-background-color: transparent; -fx-padding: 10;">
            <buttons> <!-- Spacer left -->
                <Button mnemonicParsing="false" style="-fx-background-color: #40798c; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 6 20;" text="Back" />
                <Button mnemonicParsing="false" style="-fx-background-color: #40798c; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 6 20;" text="Save" /> <!-- Spacer right -->
            </buttons>
        </ButtonBar>
    </children>
</VBox>
