<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="600.0" spacing="15.0" style="-fx-background-color: #cee0dc; -fx-padding: 40;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.admin.main.MainAdminViewController">

    <children>
        <ToolBar prefHeight="40.0" prefWidth="480.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 10;">
            <items>
                <Button fx:id="trainsButton" mnemonicParsing="false" onAction="#onTrainsButton" style="-fx-background-color: #40798c; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 6 12;" text="Trains" />
                <Button fx:id="myAccountButton" mnemonicParsing="false" onAction="#onMyAccountButton" style="-fx-background-color: #40798c; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 6 12;" text="MyAccount" />
            <Label fx:id="messageLabel" alignment="CENTER" prefHeight="17.0" prefWidth="320.0" text="&lt;message&gt;" />
            </items>
        </ToolBar>

        <ListView fx:id="trainsListView" prefHeight="340.0" prefWidth="480.0" style="-fx-background-color: white; -fx-background-radius: 10;" />

        <ButtonBar prefHeight="40.0" prefWidth="480.0" style="-fx-background-color: transparent; -fx-padding: 10;">
            <buttons>
                <Button fx:id="addButton" mnemonicParsing="false" onAction="#onAddButton" style="-fx-background-color: #40798c; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 16;" text="Add" />
                <Button fx:id="removeButton" mnemonicParsing="false" onAction="#onRemoveButton" style="-fx-background-color: #40798c; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 16;" text="Remove" />
                <Button fx:id="modifyButton" mnemonicParsing="false" onAction="#onModifyButton" style="-fx-background-color: #40798c; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 16;" text="Modify" />
            </buttons>
        </ButtonBar>
    </children>

</VBox>
