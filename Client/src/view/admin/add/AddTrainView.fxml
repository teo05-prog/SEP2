<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="15.0" style="-fx-background-color: #cee0dc; -fx-padding: 40;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.admin.add.AddTrainViewController">

    <children>
        <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 24px; -fx-font-weight: bold;" text="Add Train" />

        <VBox spacing="10.0" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 10;">
            <children>
                <HBox spacing="10.0">
                    <children>
                        <Label style="-fx-text-fill: #2c3e50;" text="Train ID:">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <Label style="-fx-text-fill: #2c3e50;" text="[train ID]" />
                    </children>
                </HBox>

                <HBox spacing="20.0" style="-fx-padding: 10;">
                    <children>
                        <VBox spacing="5.0">
                            <children>
                                <Label style="-fx-text-fill: #2c3e50;" text="FROM">
                                    <font>
                                        <Font name="System Bold" size="13.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="fromComboBox" prefHeight="40.0" prefWidth="160.0" promptText="Station" style="-fx-background-color: #e0f7fa; -fx-border-color: #2c3e50; -fx-border-radius: 4;" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label style="-fx-text-fill: #2c3e50;" text="TO">
                                    <font>
                                        <Font name="System Bold" size="13.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="toComboBox" prefHeight="40.0" prefWidth="160.0" promptText="Station" style="-fx-background-color: #e0f7fa; -fx-border-color: #2c3e50; -fx-border-radius: 4;" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>

        <ButtonBar prefHeight="40.0" prefWidth="200.0" style="-fx-padding: 10;">
            <buttons>
                <Button mnemonicParsing="false" style="-fx-background-color: #40798c; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 6 12;" text="Back" />
                <Button mnemonicParsing="false" style="-fx-background-color: #40798c; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 6 12;" text="Save" />
            </buttons>
        </ButtonBar>
    </children>
</VBox>
