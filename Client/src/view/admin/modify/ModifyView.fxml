<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="600.0" spacing="15.0" style="-fx-background-color: #cee0dc; -fx-padding: 40;" stylesheets="@table-styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.admin.modify.ModifyViewController">

    <children>
        <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 24px; -fx-font-weight: bold;" text="Train Information" />

        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="480.0" spacing="10.0">
            <children>
                <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;" text="Modify information for train:" />
                <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" text="[train ID]" />
            </children>
        </HBox>

        <!-- StackPane to create custom styled container -->
        <StackPane>
            <!-- Background shape with rounded corners on all sides -->
            <VBox prefHeight="300.0" prefWidth="480.0" style="-fx-background-color: white; -fx-background-radius: 10px;">
                <!-- Header with rounded top corners -->
                <HBox prefHeight="30.0" style="-fx-background-color: #e8f4f2; -fx-background-radius: 10px 10px 0 0; -fx-padding: 5;">
                    <children>
                        <!-- Using percentage-based widths for header labels to ensure alignment -->
                        <HBox alignment="CENTER" style="-fx-padding: 0;" HBox.hgrow="ALWAYS">
                            <Label style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="From" />
                        </HBox>
                        <HBox alignment="CENTER" maxWidth="95.0" minWidth="97.0" style="-fx-padding: 0;" HBox.hgrow="ALWAYS">
                            <Label style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="To" />
                        </HBox>
                        <HBox alignment="CENTER" style="-fx-padding: 0;" HBox.hgrow="ALWAYS">
                            <Label style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Arrival" />
                        </HBox>
                        <HBox alignment="CENTER" maxWidth="103.0" minWidth="103.0" prefWidth="103.0" style="-fx-padding: 0;" HBox.hgrow="ALWAYS">
                            <Label style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Departure" />
                        </HBox>
                        <HBox alignment="CENTER" maxWidth="95.0" minWidth="95.0" prefWidth="95.0" style="-fx-padding: 0;" HBox.hgrow="ALWAYS">
                            <Label style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Seats" />
                        </HBox>
                    </children>
                </HBox>

                <!-- Create a wrapper for the table to handle bottom corners -->
                <StackPane style="-fx-background-radius: 0 0 10px 10px; -fx-background-color: white;" VBox.vgrow="ALWAYS">
                    <!-- Table without header (since we created our own) -->
                    <TableView fx:id="trainTable" fixedCellSize="25" style="-fx-background-color: transparent; -fx-padding: 0; -fx-background-insets: 0; -fx-background-radius: 0 0 10px 10px;">
                        <columns>
                            <TableColumn maxWidth="-1.0" minWidth="107.0" prefWidth="-1.0" text="From" visible="true" />
                            <TableColumn maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="To" visible="true" />
                            <TableColumn maxWidth="-1.0" minWidth="111.0" prefWidth="-1.0" text="Arrival" visible="true" />
                            <TableColumn maxWidth="-1.0" minWidth="103.0" prefWidth="-1.0" text="Departure" visible="true" />
                            <TableColumn maxWidth="-1.0" minWidth="95.0" prefWidth="-1.0" text="Seats" visible="true" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </StackPane>
            </VBox>
        </StackPane>

        <ButtonBar prefHeight="40.0" prefWidth="480.0" style="-fx-background-color: transparent; -fx-padding: 10;">
            <buttons>
                <Button mnemonicParsing="false" style="-fx-background-color: #40798c; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 6 20;" text="Back" />
                <Button mnemonicParsing="false" style="-fx-background-color: #40798c; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 6 20;" text="Save" />
            </buttons>
        </ButtonBar>
    </children>
</VBox>
