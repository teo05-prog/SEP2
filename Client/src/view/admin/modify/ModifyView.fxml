<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="600.0" spacing="15.0" style="-fx-background-color: #cee0dc; -fx-padding: 40;" stylesheets="@table-styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.admin.modify.ModifyViewController">

    <children>
        <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 24px; -fx-font-weight: bold;" text="Train Information" />

        <HBox alignment="CENTER" spacing="10.0" prefHeight="50.0" prefWidth="480.0">
            <children>
                <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;" text="Modify information for train:" />
                <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" text="[train ID]" />
            </children>
        </HBox>

        <TableView fx:id="trainTable" prefHeight="300.0" prefWidth="480.0" styleClass="rounded-table">
            <columns>
                <TableColumn prefWidth="75.0" text="From" />
                <TableColumn prefWidth="75.0" text="To" />
                <TableColumn prefWidth="75.0" text="Arrival" />
                <TableColumn prefWidth="75.0" text="Departure" />
                <TableColumn prefWidth="75.0" text="Seats" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <ButtonBar prefHeight="40.0" prefWidth="480.0" style="-fx-background-color: transparent; -fx-padding: 10;">
            <buttons>
                <Button mnemonicParsing="false" text="Back"
                        style="-fx-background-color: #40798c; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 6 20;"/>
                <Button mnemonicParsing="false" text="Save"
                        style="-fx-background-color: #40798c; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 6 20;"/>
            </buttons>
        </ButtonBar>
    </children>
</VBox>